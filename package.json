{
  "name": "reptimer",
  "version": "2.0.0",
  "scripts": {
    "ng": "ng",
    "prebuild": "node tools/version.js",
    "start": "npm run prebuild && ng serve --port 4201 --open",
    "build": "ng build",
    "deployment": "npm run prebuild && ng build --configuration production",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n-01-extract": "ng extract-i18n --output-path src/locale --out-file messages.de-DE.xliff --format xliff --progress",
    "i18n-02-create-messages": "tsc tools/i18n-create-messages.ts && node tools/i18n-create-messages.js",
    "i18n-extract": "node_modules\\.bin\\ngc -p tsconfig.app.json && node_modules\\.bin\\localize-extract -l de-DE -s ./dist/out-locl/**/*.js -f xlf -o src/locale/messages.de-DE.xlf",
    "i18n-createJson": "tsc tools/dev-localizer.ts && node tools/dev-localizer.js",
    "i18n": "npm run i18n-01-extract && npm run i18n-02-create-messages"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/router": "^20.3.15",
    "file-saver": "^2.0.5",
    "ngx-papaparse": "^5.0.0",
    "rxjs": "~6.6.0",
    "ts-md5": "^1.2.7",
    "tslib": "^2.0.0",
    "xliff": "^5.3.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.12",
    "@angular/cli": "^20.3.12",
    "@angular/compiler-cli": "^20.3.15",
    "@angular/localize": "^20.3.15",
    "@apostrophecms/stylelint-no-mixed-decls": "^1.2.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.19.25",
    "angular-eslint": "21.0.1",
    "eslint": "^9.39.1",
    "jasmine-core": "~3.6.0",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended": "^17.0.0",
    "ts-node": "~8.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.46.4"
  },
  "browser": {
    "crypto": false
  }
}
